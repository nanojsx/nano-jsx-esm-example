{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "tmp",

    "jsx": "react-jsx",
    "jsxImportSource": "nano-jsx/esm",

    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
