{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "tmp",

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
